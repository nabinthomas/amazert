<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DevicesActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="410dp"
        android:layout_height="49dp"
        android:gravity="center_vertical|left"
        android:text="TextView"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="1dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical|left"
        android:onClick="launchDeviceSettingActivity"
        android:text="Settings"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:gravity="center_vertical|left"
        android:onClick="launchStatusActivity"
        android:text="Status"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:gravity="center_vertical|left"
        android:onClick="rebootDevice"
        android:text="Reboot"
        app:layout_constraintTop_toTopOf="@+id/divider3"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:gravity="center_vertical|left"
        android:onClick="launchDeleteDeviceActivity"
        android:text="Remove Device"
        app:layout_constraintTop_toBottomOf="@+id/divider4"
        tools:layout_editor_absoluteX="3dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:layout_editor_absoluteX="2dp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:layout_editor_absoluteX="2dp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:layout_editor_absoluteX="1dp" />

    <View
        android:id="@+id/divider5"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>